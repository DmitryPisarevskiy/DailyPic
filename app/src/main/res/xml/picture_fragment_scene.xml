<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/bottom_sheet_line_2"
            android:visibility="gone"/>
        <Constraint android:id="@+id/input_layout"
            android:visibility="gone"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/bottom_sheet_line_2"
            android:visibility="visible"
            android:layout_height="@dimen/line_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/single_common_margin"
            android:layout_width="@dimen/bottom_sheet_line_width" />
        <Constraint android:id="@id/input_layout"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_line_2" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="500"/>
</MotionScene>
